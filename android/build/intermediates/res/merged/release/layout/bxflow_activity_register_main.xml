<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bxflow_white">

    <include
        android:id="@+id/bxflow_toolbar_ac"
        layout="@layout/bxflow_toolbar_green" />

    <FrameLayout
        android:id="@+id/register_frame"
        android:layout_below="@+id/circle_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/circle_indicator"
        android:layout_below="@+id/bxflow_toolbar_ac"
        app:fillColor="@color/bxflow_green"
        android:layout_marginTop="5dp"
        app:radius="5dp"
        android:padding="10dp"
        app:pageColor="@color/bxflow_light_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</RelativeLayout>