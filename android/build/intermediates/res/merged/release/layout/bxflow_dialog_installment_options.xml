<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnr_installment_options_dialog_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/apptxt_installment_count_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/bxflow_installment_count_label2"
            android:textAllCaps="true"
            android:textColor="@color/bxflow_green"
            android:textSize="12sp"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/apptxt_monthly_amount_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/bxflow_monthly_amount_label"
            android:textColor="@color/bxflow_green"
            android:textSize="12sp"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/apptxt_total_amount_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/bxflow_total_amount_label"
            android:textColor="@color/bxflow_green"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>


    <ListView
        android:id="@+id/lsv_installment_options_dialog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="@android:color/transparent"
        android:choiceMode="singleChoice"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:listSelector="@android:color/transparent"
        android:scrollbarStyle="outsideOverlay" />

    <View
        android:id="@+id/vw_dialog_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bxflow_softgray_divider" />
</LinearLayout>