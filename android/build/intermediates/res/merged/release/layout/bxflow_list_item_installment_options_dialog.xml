<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnr_installment_options_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bxflow_row_gray"
    android:orientation="horizontal"
    android:padding="15dp">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/apptxt_installment_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true"
        android:text="TEK ÇEKİM"
        android:textColor="@color/bxflow_black"
        android:textSize="12sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/apptxt_monthly_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true"
        android:text="66 TL"
        android:textColor="@color/bxflow_black"
        android:textSize="12sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/apptxt_total_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true"
        android:text="66 TL"
        android:textColor="@color/bxflow_green"
        android:textSize="12sp" />
</LinearLayout>